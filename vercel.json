{
  "framework": "nextjs",
  "buildCommand": "cp prisma/schema.prod.prisma prisma/schema.prisma && npx prisma generate && npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/invoices/parse/*.ts": {
      "maxDuration": 60,
      "memory": 2048
    },
    "app/api/reports/**/*.ts": {
      "maxDuration": 45,
      "memory": 1536
    }
  },
  "regions": ["syd1"],
  "env": {
    "NODE_ENV": "production",
    "PERFORMANCE_MONITORING": "true"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://buildtrack.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/dashboard",
      "statusCode": 302,
      "has": [
        {
          "type": "cookie",
          "key": "auth-token"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/system/info"
    }
  ],
  "crons": [
    {
      "path": "/api/system/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}
